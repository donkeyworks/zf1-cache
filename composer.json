{
    "name": "donkeyworks/zendframework1-cache",
    "description": "Zend Framework 1 Cache component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.0.0",
        "donkeyworks/zendframework1-exception": "^1.0.0",
        "donkeyworks/zendframework1-config": "^1.0.0",
        "donkeyworks/zendframework1-loader": "^1.0.0",
        "donkeyworks/zendframework1-log": "^1.0.0"
    },
    "autoload": {
        "psr-0": {
            "Zend_Cache_": "src/"
        },
        "classmap": [
            "src/Zend/Cache.php"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "no-api": true,
            "url": "https://github.com/diablomedia/phpstorm-stubs"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9.2",
        "jetbrains/phpstorm-stubs": "dev-phpstan",
        "friendsofphp/php-cs-fixer": "^2.11",
        "maglnet/composer-require-checker": "^0.1.6 | ^0.2.1",
        "phpro/grumphp": "^0.14.0"
    },
    "include-path": [
        "src/"
    ],
    "archive": {
        "exclude": ["/tests"]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -l5 -c phpstan.neon --no-progress ./ --ansi",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "suggest": {
        "ext-apc": "Used in the APC Backend",
        "ext-memcached": "Used in the Libmemcached Backend",
        "ext-memcache": "Used in the Memcached Backend",
        "ext-wincache": "Used in the WinCache Backend",
        "ext-hash": "May be used in the File Backend depending on hashing algorithm used",
        "ext-xcache": "Used in the Xcache Backend"
    }
}
